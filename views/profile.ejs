<%- include('partials/header', { pageTitle: 'Edit Profile' }) %>

  <div class="container py-4">
    <h2>Edit Profile</h2>
    <% if (messages && messages.success && messages.success.length) { %>
      <% messages.success.forEach(function(m){ %>
        <div class="alert alert-success"><%= m %></div>
      <% }); %>
    <% } %>
    <% if (messages && messages.error && messages.error.length) { %>
      <% messages.error.forEach(function(m){ %>
        <div class="alert alert-danger"><%= m %></div>
      <% }); %>
    <% } %>

    <form method="post" action="/profile">
      <input type="hidden" name="returnTo" value="<%= typeof returnTo !== 'undefined' ? returnTo : '' %>">
      <div class="mb-3">
        <label class="form-label">Email (readonly)</label>
        <input class="form-control" type="email" value="<%= user && user.email ? user.email : '' %>" readonly>
      </div>
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" name="username" value="<%= user && user.username ? user.username : '' %>">
      </div>
      <div class="mb-3">
        <label class="form-label">Address</label>
        <textarea class="form-control" name="address" rows="3"><%= user && user.address ? user.address : '' %></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label">Contact</label>
        <input class="form-control" name="contact" value="<%= user && user.contact ? user.contact : '' %>">
      </div>
      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/confirm-payment" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
<%- include('partials/footer') %>
