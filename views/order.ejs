<%- include('partials/header', { pageTitle: 'Your Orders' }) %>

  <div class="container py-4">
    <h1 class="text-center mb-4">Order History</h1>

    <% if ((orders && orders.length) || last) { %>
      <% if (orders && orders.length) { %>
        <h4 class="mt-3">Past Orders</h4>
        <div class="table-responsive mb-4">
          <table class="table align-middle">
            <thead class="table-dark">
              <tr>
                <th style="width:60px;">#</th>
                <th style="width:160px;">Order</th>
                <th>Product</th>
                <th style="width:120px;">Quantity</th>
                <th style="width:140px;">Item Total</th>
                <th style="width:180px;">Purchased At</th>
              </tr>
            </thead>
            <tbody>
              <% let index = 0; %>
              <% orders.slice().reverse().forEach(function(o) { %>
                <% o.items.forEach(function(it){ %>
                  <% index++; %>
                  <tr style="background:#f6f7f8;">
                    <td><%= index %></td>
                    <td>
                      <div style="font-weight:600"><a href="/order?orderId=<%= o.orderId %>"><%= o.orderId %></a></div>
                      <div class="text-muted small">Order total: $<%= o.total %></div>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <% if (it.image) { %>
                          <img src="/images/<%= it.image %>" alt="<%= it.productName %>" style="width:48px;height:48px;object-fit:cover;margin-right:12px;border-radius:6px;">
                        <% } else { %>
                          <div style="width:48px;height:48px;background:#fff;margin-right:12px;border-radius:6px;border:1px solid #eee;display:inline-block;"></div>
                        <% } %>
                        <div>
                          <div style="font-weight:600;"><%= it.productName %></div>
                          <div class="text-muted small">Product ID: <%= it.id %></div>
                        </div>
                      </div>
                    </td>
                    <td><%= Number(it.quantity) || 0 %></td>
                    <% const pr = Number(it.price); const q = Number(it.quantity); const itTot = (isFinite(pr) ? pr : 0) * (isFinite(q) ? q : 0); %>
                    <td>$<%= isFinite(itTot) ? itTot.toFixed(2) : '0.00' %></td>
                    <td><%= o.createdAt ? new Date(o.createdAt).toLocaleString() : '' %></td>
                    
                  </tr>
                <% }); %>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>

      <!-- Last Purchase section removed as requested -->
    <% } else { %>
      <p>You have no orders yet.</p>
    <% } %>
  </div>
<%- include('partials/footer') %>
