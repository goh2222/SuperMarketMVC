<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/site.css" rel="stylesheet" />
  <style>
    /* Invoice styling tweaks */
    .invoice-header { background: linear-gradient(90deg, #e9f7ef, #f6fff9); border-radius: 6px; padding: 18px; }
    .table-borderless td, .table-borderless th { border: 0; }
    @media print {
      body * { visibility: hidden; }
      .printable, .printable * { visibility: visible; }
      .printable { position: absolute; left: 0; top: 0; width: 100%; }
      .no-print { display: none !important; }
    }
  </style>
  <title>Purchase Complete</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Jeffery Market</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/orders">My Orders</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <!-- Invoice / Receipt Layout -->
        <% const p = (typeof purchase !== 'undefined' && purchase) ? purchase : { items: [], total: '0.00', user: (typeof user !== 'undefined' ? user : null) }; %>
        <div class="card mb-4 printable">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h4 class="mb-0">Jeffery Market</h4>
                <div class="text-muted">Thank you<%= p.user && p.user.username ? (', ' + p.user.username) : '' %> — your order was processed.</div>
              </div>
              <div class="text-end">
                <% if (p.orderId) { %>
                  <div><strong>Order ID:</strong> <%= p.orderId %></div>
                <% } %>
                <% if (p.createdAt) { %>
                  <div><small>Placed: <%= new Date(p.createdAt).toLocaleString() %></small></div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <div class="card mb-3 printable">
          <div class="card-body">
            <h5 class="mb-3">Invoice</h5>
            <div class="table-responsive">
              <table class="table table-sm table-borderless">
                <thead>
                  <tr>
                    <th>Item</th>
                    <th class="text-end">Unit</th>
                    <th class="text-end">Discount</th>
                    <th class="text-end">Qty</th>
                    <th class="text-end">Line Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% let subtotal = 0; let totalSavings = 0; let computedTotal = 0; %>
                  <% (p.items || []).forEach(function(it){ %>
                    <% const qty = Number(it.quantity || 0); %>
                    <% const unitPrice = Number(it.price || 0); %>
                    <% const original = (typeof it.originalPrice !== 'undefined' ? Number(it.originalPrice) : unitPrice); %>
                    <% const disc = (it.discount || 0) * 1; %>
                    <% const line = unitPrice * qty; %>
                    <% const saved = (original - unitPrice) * qty; %>
                    <% subtotal += original * qty; computedTotal += line; totalSavings += saved; %>
                    <tr>
                      <td><strong><%= it.productName %></strong><div class="text-muted small">SKU: <%= it.id %></div></td>
                      <td class="text-end">$<%= original.toFixed(2) %></td>
                      <td class="text-end"><%= (disc && disc > 0) ? (disc.toFixed(2) + '%') : '-' %></td>
                      <td class="text-end"><%= qty %></td>
                      <td class="text-end">$<%= line.toFixed(2) %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>

            <div class="row">
              <div class="col-6 text-start mt-3">
                <h6>Shipping / Contact</h6>
                <div class="small text-muted">
                  <div><strong>Name:</strong> <%= (p.user && p.user.username) ? p.user.username : (user && user.username ? user.username : 'Guest') %></div>
                  <div><strong>Email:</strong> <%= (p.user && p.user.email) ? p.user.email : (user && user.email ? user.email : '—') %></div>
                  <div><strong>Address:</strong> <%= (p.user && p.user.address) ? p.user.address : (user && user.address ? user.address : '—') %></div>
                  <div><strong>Contact:</strong> <%= (p.user && p.user.contact) ? p.user.contact : (user && user.contact ? user.contact : '—') %></div>
                </div>
              </div>
              <div class="col-6">
                <table class="table table-sm table-borderless">
                  <tbody>
                    <tr>
                      <td class="text-start">Subtotal</td>
                      <td class="text-end">$<%= subtotal.toFixed(2) %></td>
                    </tr>
                    <tr>
                      <td class="text-start">You saved</td>
                      <td class="text-end text-success">-$<%= totalSavings.toFixed(2) %></td>
                    </tr>
                    <tr>
                      <td class="text-start">Payment Method</td>
                      <td class="text-end"><%= p.paymentMethod ? p.paymentMethod : (p.user && p.user.paymentMethod ? p.user.paymentMethod : 'N/A') %></td>
                    </tr>
                    <tr>
                      <td class="text-start"><strong>Total</strong></td>
                      <td class="text-end"><strong>$<%= computedTotal.toFixed(2) %></strong></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="d-flex gap-2 no-print">
          <button class="btn btn-outline-secondary" onclick="window.print();">Print Receipt</button>
          <a href="/orders" class="btn btn-primary">View Order History</a>
          <a href="/shopping" class="btn btn-outline-secondary">Continue Shopping</a>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer') %>

